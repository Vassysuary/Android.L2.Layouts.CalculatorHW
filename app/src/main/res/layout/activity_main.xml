<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic"
            android:text="Калькулятор версия 0.000001"
            android:textAlignment="gravity"/>

        <TextView

            android:id="@+id/result_text_view" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="end"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:textColor="@color/black"
            android:background="#E8EAF6"
            android:textSize="20dp"
            android:text="0"
            android:textAlignment="gravity"/>
        <Button
            android:id="@+id/one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:text="1"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:text="2"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/three_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:text="3"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/divide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:backgroundTint="#C5CAE9"
            android:text="/"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="4"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/five_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="5"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/six_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="6"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/multiplication_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:backgroundTint="#C5CAE9"
            android:text="*"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/seven_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="7"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/eight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="8"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/nine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="9"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/subtraction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:backgroundTint="#C5CAE9"
            android:text="-"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/zero_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="0"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/point_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#E8EAF6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="."
            android:textSize="20dp"/>
        <Button
            android:id="@+id/equals_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="="
            android:textSize="20dp"/>
        <Button
            android:id="@+id/addition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:backgroundTint="#C5CAE9"
            android:text="+"
            android:textSize="20dp"/>
    </GridLayout>

</LinearLayout>